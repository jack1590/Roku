<?xml version="1.0" encoding="utf-8" ?>

<component name="LoginView" extends="Group" initialFocus="username">
    <interface>
    </interface>

    <script type="text/brightscript" uri="loginView.brs" />
    <script type="text/brightscript" uri="../common/app.brs" />

    <children>

            <LayoutGroup 
                id="layoutGroup"
                layoutDirection="vert"
                translation="[100,100]"
                itemSpacings="[100,30]">

                <Label 
                    id="title" 
                    text="Login"/>
                
                <InputEditBox 
                    id="username"
                    width="500"
                    hintText="Username"/>

                <InputEditBox 
                    id="password"
                    width="500"
                    hintText="Password"/>
                
                <InputButton
                    id = "exampleButton"
                    text = "Example Button"/>
                
                <Keyboard id = "keyboard" showTextEditBox="false" />
                
            </LayoutGroup>
    </children>
</component>