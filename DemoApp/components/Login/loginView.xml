<?xml version="1.0" encoding="utf-8" ?>

<component name="LoginView" extends="Group" initialFocus="username">
    <script type="text/brightscript" uri="loginView.brs" />
    <script type="text/brightscript" uri="../common/app.brs" />

    <children>

        <LayoutGroup 
            id="layoutGroup"
            layoutDirection="vert">

            <Label 
                id="title" 
                text="Login"/>
            
            <InputEditBox 
                id="username"
                hintText="Username"/>

            <InputEditBox 
                id="password"
                hintText="Password"
                secureMode="true"/>
            
            <InputButton
                id = "loginButton"
                text = "Login"/>
            
            <Keyboard 
                id = "keyboard" 
                showTextEditBox="false" 
                visible="false" />
            
        </LayoutGroup>
    </children>
</component>